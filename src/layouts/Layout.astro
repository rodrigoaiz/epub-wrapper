---
import Navigation from '@/components/Navigation.astro';
import ContentViewer from '@/components/ContentViewer';

import "@/styles/global.css";
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
    <div class="app-container">
      <div class="sidebar">
          <Navigation>
      </div>
      <div class="content-wrapper">
          <ContentViewer client:load initialPath="/OEBPS/cg_cirugia-1.xhtml" />
      </div>
    </body>
</html>

<style>
html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    .app-container {
        display: flex;
        width: 100%;
        height: 100vh;
    }

    .sidebar {
        width: 300px;
        height: 100%;
        overflow-y: auto;
        position: relative;
        z-index: 1;
    }

    .content-wrapper {
        flex-grow: 1;
        height: 100%;
        overflow-y: auto;
    }
</style>
